{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@orchestration/*": ["orchestration/*"],
      "@pms/*": ["pms/*"],
      "@cli/*": ["src/cli/*"],
      "@git/*": ["src/git/*"],
      "@agents/*": ["src/agents/*"]
    }
  },
  "include": ["src/**/*", "orchestration/**/*", "pms/**/*"],
  "exclude": ["node_modules", "dist"]
}
